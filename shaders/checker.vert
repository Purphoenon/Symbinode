#version 440 core
layout (location = 0) in vec2 aPos;

out vec2 texCoords;

void main(void)
{
    gl_Position = vec4(aPos, 0.0f, 1.0f);
    texCoords = (aPos + vec2(1.0f)) / vec2(2.0f);
}
